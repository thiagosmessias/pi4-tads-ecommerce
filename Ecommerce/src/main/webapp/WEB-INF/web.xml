<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletUsuario</servlet-name>
        <servlet-class>com.gruposet.ecommerce.servlets.ServletUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEndereco</servlet-name>
        <servlet-class>com.gruposet.ecommerce.servlets.ServletEndereco</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Usuarios</servlet-name>
        <jsp-file>/html/Usuarios/Usuarios.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ServletProduto</servlet-name>
        <servlet-class>com.gruposet.ecommerce.servlets.ServletProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPedido</servlet-name>
        <servlet-class>com.gruposet.ecommerce.servlets.ServletPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUsuario</servlet-name>
        <url-pattern>/ServletUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Usuarios</servlet-name>
        <url-pattern>/Usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProduto</servlet-name>
        <url-pattern>/ServletProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPedido</servlet-name>
        <url-pattern>/ServletPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEndereco</servlet-name>
        <url-pattern>/ServletEndereco</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/ecommerce?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>EcommerceDatabase</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
